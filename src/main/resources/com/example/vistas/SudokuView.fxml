<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllers.SudokuController"

            prefWidth="1100" prefHeight="650"



            styleClass="root">


<top>
    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
        <padding><Insets top="12" right="14" bottom="12" left="14"/></padding>

        <Label text="Difficulty:" styleClass="top-label"/>

        <ToggleButton fx:id="btnEasy"   text="Easy"   styleClass="top-pill"
                      onAction="#cambiarDificultad"/>
        <ToggleButton fx:id="btnMedium" text="Medium" styleClass="top-pill"
                      onAction="#cambiarDificultad"/>
        <ToggleButton fx:id="btnHard"   text="Hard"   styleClass="top-pill"
                      onAction="#cambiarDificultad"/>
        <ToggleButton fx:id="btnExpert" text="Expert" styleClass="top-pill"
                      onAction="#cambiarDificultad"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Time:" styleClass="top-label"/>
        <Label fx:id="lblTime" text="00:00" styleClass="top-time"/>
    </HBox>
</top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>

            <GridPane fx:id="board" hgap="0" vgap="0" styleClass="board">

    <columnConstraints>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
        <ColumnConstraints prefWidth="58"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
        <RowConstraints prefHeight="58"/>
    </rowConstraints>

</GridPane>

        </VBox>
    </center>

    <right>
        <VBox spacing="12" prefWidth="320" styleClass="side">
            <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>

            <HBox spacing="10">
                <Button text="ðŸ’¡" styleClass="icon-btn"/>
                <Button fx:id="btnSol" text="âœŽ Solve" styleClass="icon-btn" onAction="#resolverSudoku" />
                <Button fx:id="btnUndo"  text="â†º" styleClass="icon-btn"/>
            </HBox>

            <Separator/>

            <Label text="Keypad" styleClass="panel-title"/>

            <GridPane  fx:id="keypad" hgap="18" vgap="18">
                <Button text="1" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="key"/>
                <Button text="2" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="key"/>
                <Button text="3" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="key"/>

                <Button text="4" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="key"/>
                <Button text="5" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="key"/>
                <Button text="6" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="key"/>

                <Button text="7" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="key"/>
                <Button text="8" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="key"/>
                <Button text="9" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="key"/>
            </GridPane>

            <Separator/>

            
            <Button fx:id="btnNewGame" text="New Game" styleClass="btn-primary" maxWidth="1.7976931348623157E308"/>
        </VBox>
    </right>

</BorderPane>
